{
    "manifest_version": 3,
    "version": "1.0",
    "name": "Note",
    "description": "A Note-Taking extension.",
  
    "permissions": ["activeTab", "storage", "tabs", "nativeMessaging"],
  
    "action": {
      "default_title": "Note",
      "default_popup": "popup.html",
      "javascript": ["Scripts/popup.js"],
      "FullscreenContentSetting" : "allow"
    },
  
    "content_scripts": [
      {
        "matches": ["http://*/*", "https://*/*"],
        "css": ["CSS/content.css"],
        "js": ["Scripts/content.js"]
      }
    ],
  
    "icons": {
      "16": "IMG/icon.png",
      "24": "IMG/icon.png",
      "32": "IMG/icon.png",
      "128": "IMG/icon.png"
    }
  }
  